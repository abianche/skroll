{
  "name": "skroll",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.17.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "pnpm -r --if-present lint",
    "typecheck": "pnpm -r --if-present typecheck",
    "build": "pnpm -r --if-present build",
    "dev:desktop": "cross-env NODE_ENV=development pnpm --filter @skroll/desktop start",
    "package:desktop": "pnpm --filter @skroll/desktop package",
    "make:desktop": "pnpm --filter @skroll/desktop make",
    "test": "pnpm -r --if-present test",
    "ts:gen": "pnpm --filter @skroll/grammar-skroll run gen",
    "ts:build-native": "pnpm --filter @skroll/grammar-skroll run build:native",
    "ts:build-wasm": "pnpm --filter @skroll/grammar-skroll run build:wasm",
    "ts:gen-build-all": "pnpm ts:gen && pnpm ts:build-native && pnpm ts:build-wasm",
    "ts:dump-languages": "pnpm exec tree-sitter dump-languages --config-path ./tree-sitter.config.json",
    "ts:parse": "pnpm exec tree-sitter parse --config-path ./tree-sitter.config.json --scope source.skroll",
    "ts:parse:sample": "pnpm exec tree-sitter parse --config-path ./tree-sitter.config.json --scope source.skroll packages/grammar-skroll/sample.skr",
    "ts:highlight": "pnpm exec tree-sitter highlight --config-path ./tree-sitter.config.json --scope source.skroll",
    "ts:highlight:sample": "pnpm exec tree-sitter highlight --config-path ./tree-sitter.config.json --scope source.skroll packages/grammar-skroll/sample.skr",
    "ts:playground": "pnpm exec tree-sitter playground --grammar-path packages/grammar-skroll",
    "ts:link-grammar": "ln -sf packages/grammar-skroll tree-sitter-skroll"
  },
  "devDependencies": {
    "@types/node": "22.18.6",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "globals": "16.4.0",
    "prettier": "3.6.2",
    "typescript": "5.9.2"
  }
}