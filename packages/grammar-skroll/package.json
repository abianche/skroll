{
  "name": "@skroll/grammar-skroll",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm run gen && tsc -b",
    "gen": "tree-sitter generate --no-bindings",
    "build:native": "pnpm run gen && tree-sitter build",
    "build:wasm": "pnpm run gen && tree-sitter build --wasm",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\""
  },
  "devDependencies": {
    "tree-sitter-cli": "0.22.6"
  },
  "tree-sitter": [
    {
      "scope": "source.skroll",
      "injection-regex": "^skroll$",
      "file-types": [
        "skr"
      ],
      "highlights": "queries/highlights.scm",
      "indents": "queries/indents.scm"
    }
  ]
}
