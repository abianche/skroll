{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    { "identifier": "fs:scope", "allow": [
      { "path": "$APPCONFIG/**" },
      { "path": "$DOCUMENT/**" },
      { "path": "$DESKTOP/**" },
      { "path": "$DOWNLOAD/**" },
      { "path": "$HOME/**" }
    ] },
    { "identifier": "fs:allow-exists", "allow": [
      { "path": "$APPCONFIG/**" },
      { "path": "$DOCUMENT/**" },
      { "path": "$DESKTOP/**" },
      { "path": "$DOWNLOAD/**" },
      { "path": "$HOME/**" }
    ] },
    { "identifier": "fs:allow-read-text-file", "allow": [
      { "path": "$APPCONFIG/**" },
      { "path": "$DOCUMENT/**" },
      { "path": "$DESKTOP/**" },
      { "path": "$DOWNLOAD/**" },
      { "path": "$HOME/**" }
    ] },
    { "identifier": "fs:allow-write-text-file", "allow": [
      { "path": "$APPCONFIG/**" },
      { "path": "$DOCUMENT/**" },
      { "path": "$DESKTOP/**" },
      { "path": "$DOWNLOAD/**" },
      { "path": "$HOME/**" }
    ] },
    { "identifier": "fs:allow-write-file", "allow": [
      { "path": "$APPCONFIG/**" },
      { "path": "$DOCUMENT/**" },
      { "path": "$DESKTOP/**" },
      { "path": "$DOWNLOAD/**" },
      { "path": "$HOME/**" }
    ] },
    { "identifier": "fs:allow-read-file", "allow": [
      { "path": "$APPCONFIG/**" },
      { "path": "$DOCUMENT/**" },
      { "path": "$DESKTOP/**" },
      { "path": "$DOWNLOAD/**" },
      { "path": "$HOME/**" }
    ] },
    { "identifier": "fs:allow-mkdir", "allow": [
      { "path": "$APPCONFIG/**" },
      { "path": "$HOME/**" }
    ] }
  ]
}
