{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "composite": true,
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@skroll/ipc-contracts": [
        "../../packages/ipc-contracts/src"
      ],
      "@skroll/engine-skroll": [
        "../../packages/engine-skroll/src"
      ],
      "@skroll/storage": [
        "../../packages/storage/src"
      ],
      "@skroll/parser-skroll": [
        "../../packages/parser-skroll/src"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [
    {
      "path": "../../packages/ipc-contracts"
    },
    {
      "path": "../../packages/engine-skroll"
    },
    {
      "path": "../../packages/storage"
    },
    {
      "path": "../../packages/parser-skroll"
    }
  ]
}

